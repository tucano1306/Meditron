generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String
  name          String?
  hourlyRate    Float    @default(25)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  timeEntries   TimeEntry[]
  weeks         Week[]
  monthSummaries MonthSummary[]
  paymentEntries PaymentEntry[]
}

model TimeEntry {
  id               String   @id @default(cuid())
  startTime        DateTime
  endTime          DateTime?
  duration         Int?
  date             DateTime @db.Date
  jobNumber        String?
  calculatedAmount Float?
  paidAmount       Float?
  companyPaid      Float?
  companyPaidDate  DateTime?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  weekId    String
  week      Week     @relation(fields: [weekId], references: [id])

  @@index([date])
  @@index([weekId])
  @@index([userId])
}

model Week {
  id          String      @id @default(cuid())
  weekNumber  Int
  startDate   DateTime    @db.Date
  endDate     DateTime    @db.Date
  year        Int
  month       Int
  totalHours  Float       @default(0)
  earnings    Float       @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  entries     TimeEntry[]

  @@unique([weekNumber, year, userId])
  @@index([year, month])
  @@index([userId])
}

model MonthSummary {
  id          String   @id @default(cuid())
  year        Int
  month       Int
  totalHours  Float    @default(0)
  earnings    Float    @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([year, month, userId])
  @@index([userId])
}

model PaymentEntry {
  id              String   @id @default(cuid())
  startTime       DateTime
  endTime         DateTime?
  duration        Int?
  amount          Float?
  hourlyRate      Float?
  jobNumber       String?
  date            DateTime @db.Date
  completed       Boolean  @default(false)
  companyPaid     Float?
  companyPaidDate DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([date])
  @@index([userId])
}
